<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:background="@drawable/borde_notas_materia"/>

            <TextView
                android:id="@+id/tvNombreMateria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Nombre de la materia"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="32px" >

                    <TextView
                        android:id="@+id/notaPrimerParcial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="27/30"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="28sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1er parcial"
                        android:textAlignment="center" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#efefef"/>

                <LinearLayout
                    android:id="@+id/contenedorSegundoParcial"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="32px" >

                    <TextView
                        android:id="@+id/notaSegundoParcial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="13/30"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="28sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2do parcial"
                        android:textAlignment="center" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#efefef"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="32px" >

                    <TextView
                        android:id="@+id/notaExamenFinal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="38/40"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="28sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Examen final"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mdtp_white"
                android:paddingVertical="32px" >

                <TextView
                    android:id="@+id/notaFinal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="38/40"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="28sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Examen final"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvPrimerParcial"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1er parcial"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvNotaPrimerParcial"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textAlignment="center"
            tools:text="9/12"
            android:textSize="32sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvSegundoParcial"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2do parcial"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvNotaSegundoParcial"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textAlignment="center"
            tools:text="11/13"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Examen final"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvNotaExamenFinal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textAlignment="center"
            tools:text="17/20"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Nota final"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvNotaFinal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textAlignment="center"
            tools:text="90/100"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>